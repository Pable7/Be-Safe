<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/colorBlanco"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="170sp"
        android:layout_height="170sp"
        android:src="@mipmap/ic_launcher_foreground" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_marginStart="25sp"
        android:textColor="@color/colorNegro"
        android:text="Inicio de" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginStart="25sp"
        android:textColor="@color/colorNegro"
        android:text="Sesión" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de Usuario"
        android:textColorHint="@color/colorAccentAlternative"
        android:layout_marginTop="40sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp">

        <EditText
            android:id="@+id/username_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNegro"
            android:textColorHint="@color/colorAccentAlternative"
            android:backgroundTint="@color/colorAccentAlternative"
            android:drawableEnd="@drawable/ic_person"
            android:drawableTint="@color/colorAccentAlternative"
            android:maxLines="1"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:textColorHint="@color/colorAccentAlternative"
        android:backgroundTint="@color/colorAccentAlternative"
        android:layout_marginTop="10sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp">

        <EditText
            android:id="@+id/password_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNegro"
            android:textColorHint="@color/colorAccentAlternative"
            android:backgroundTint="@color/colorAccentAlternative"
            android:drawableEnd="@drawable/ic_lock"
            android:drawableTint="@color/colorAccentAlternative"
            android:maxLines="1"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/boton_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:layout_marginTop="15sp"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorBlanco"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Crear Una Cuenta?"
        android:gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="100sp" />
</LinearLayout>